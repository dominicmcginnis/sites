          script(type='text/javascript', src='http://www.google.com/jsapi?key=ABQIAAAAyXu_1Zw3-DbyonSxgLICyxSvd_PWAzQYT6cPPLRqr8-D213wYRS98SYvGv88GueR8G34jgm2pizkyA')
          script(type='text/javascript').
            google.load("maps","2.x");
          script(type='text/javascript').
            jQuery(document).ready(function($) {
            //##########################################
            // Google maps
            //##########################################
            // You can get the latitud and Longitude values at http://itouchmap.com/latlong.html
            var latitude = 44.8011821;
            var longitude = -68.7778138;
            // center map
            var map = new GMap2(document.getElementById("map"));
            var point = new GLatLng(latitude, longitude);
            map.setCenter(point, 16);
            // Set marker
            marker = new GMarker(point);
            map.addOverlay(marker);
            // controls
            map.addControl(new GLargeMapControl());
            });
          h4.heading Location
